<section class="container w-3/5 mx-auto mt-16">

<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>

  <h1 class="text-slate-800 text-xl font-semibold mt-10"><%= @todo.description %></h1>
  <br>

<div>
  <div class="btn py-2 px-4"><%= link_to "Edit this todo", edit_todo_path(@todo) %></div>
  <div class="btn py-2 px-4"><%= link_to "Back to todos", todos_path %></div>
  <div class="btn py-2 px-4"><%= button_to "Delete this todo", @todo, method: :delete %></div>
</div>

</section>

